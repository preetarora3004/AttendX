generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String    @unique @default(cuid())
  username   String    @unique
  password   String
  name       String
  role       Role      @default(student)
  time_table String[]
  user       Student[]
  teacher    Teacher[]
}

model Student {
  id         String      @unique @default(cuid())
  rollNum    Int         @unique
  course     String
  userId     String
  classId    String?
  attendance Attendance?
  class      Class?      @relation(fields: [classId], references: [id])
  user       User        @relation(fields: [userId], references: [id])
}

model Teacher {
  id        String    @unique @default(cuid())
  teacherId Int       @unique
  dept      String
  userId    String
  classes   Class[]
  user      User      @relation(fields: [userId], references: [id])
  subject   Subject[]
}

model Class {
  id             String    @unique @default(cuid())
  name           String    @unique
  teacherId      String
  total_strength Int       @default(0)
  teacher        Teacher   @relation(fields: [teacherId], references: [id])
  students       Student[]
}

model Subject {
  id          String  @unique @default(cuid())
  name        String
  course_code String
  teacher     Teacher @relation(fields: [teacherId], references: [id])
  teacherId   String
}

enum Role {
  student
  teacher
}

enum Attendance {
  present
  absent
}
