generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String    @unique @default(cuid())
  username String    @unique
  password String
  name     String
  role     Role
  user     Student[]
  teacher  Teacher[]
}

model Student {
  id         String     @unique @default(cuid())
  rollNum    Int        @unique
  course     String
  user       User?      @relation(fields: [userId], references: [id])
  userId     String?
  class      Class      @relation(fields: [classId], references: [id])
  classId    String
  gender     Gender
  attendance Attendance
}

model Teacher {
  id        String  @unique @default(cuid())
  teacherId Int     @unique
  dept      String
  class     Class   @relation(fields: [classId], references: [id])
  classId   String
  user      User?   @relation(fields: [userId], references: [id])
  userId    String?
  gender    Gender
}

model Class {
  id             String    @unique @default(cuid())
  name           String
  total_strength Int
  students       Student[]
  teacher        Teacher[]
}

enum Role {
  student
  teacher
}

enum Gender {
  male
  female
}

enum Attendance {
  present
  absent
}