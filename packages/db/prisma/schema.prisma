generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String    @unique @default(cuid())
  username   String    @unique
  password   String
  name       String
  role       Role
  user       Student[]
  teacher    Teacher[]
  time_table String[]
}

model Student {
  id         String     @unique @default(cuid())
  rollNum    Int        @unique
  course     String
  user       User       @relation(fields: [userId], references: [id])
  userId     String
  class      Class?     @relation(fields: [classId], references: [id])
  classId    String?
  attendance Attendance?
}

model Teacher {
  id        String   @unique @default(cuid())
  teacherId Int      @unique
  dept      String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  classes   Class[]
}

model Class {
  id             String    @unique @default(cuid())
  name           String
  teacher        Teacher   @relation(fields: [teacherId], references: [id])
  teacherId      String
  total_strength Int
  students       Student[]
}

enum Role {
  student
  teacher
}

enum Attendance {
  present
  absent
}
