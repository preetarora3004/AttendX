{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@workspace/ui/*" : ["../../packages/ui/src/*"],
      "@workspace/utils/*" : ["../../packages/utils/src/*"],
      "@workspace/db/*" : ["../../packages/db/src/*"]
    },
    "typeRoots": ["../../packages/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules"]
}
